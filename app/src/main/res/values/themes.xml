<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Temas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Tema1" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/azul_claro</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:colorPrimary">@color/azul_claro</item>
        <item name="android:colorAccent">@android:color/white</item>
    </style>
    <style name="Tema2" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/gris_oscuro</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:colorPrimary">@color/gris_oscuro</item>
        <item name="android:colorAccent">@color/azul_claro</item>
    </style>

</resources>